<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_invoice_form_pos" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_open']" position="after">
                    <button name="reconcile_with_pos_payment" string="Reconcile with pos payment"
                        help="Reconcile invoice with pos payments registred in sale orders that generated this invoice"
                        class="oe_highlight" type="object"
                        states="open"
                        attrs="{'invisible': [('session_id', '=', False)]}"
                        />

                </xpath>
                <xpath expr="//notebook/page[@string='Other Info']/group" position="inside">
                    <group name="pos">
                        <field name="session_id"/>
                    </group>
                </xpath>
             </field>
        </record>
    </data>
</openerp>
