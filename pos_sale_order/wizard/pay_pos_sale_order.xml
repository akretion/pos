<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="pay_pos_sale_order_view">
            <field name="model">pay.pos.sale.order</field>
            <field name="arch" type="xml">
                <form string="Pay Pos Sale Order">
                    <group>
                        <field name="statement_id" string="Caisse"
                            readonly="True"/>
                        <field name="amount" string="Paid Amount"/>
                        <field name="date" string="Date"/>
                        <field name="description" string="Description"/>
                    </group>
                    <footer>
                        <button string="Pay" name="pay_sale_order" type="object" class="oe_highlight"/>
                        or
                        <button string="Pay And Confirm Order" name="pay_sale_order_and_confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="open_pay_pos_sale_order" model="ir.actions.act_window">
            <field name="name">Pay Pos Sale Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pay.pos.sale.order</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="pay_pos_sale_order_view"/>
        </record>


        <!-- INHERITED VIEW FOR THE OBJECT : sale_order -->

        <record id="pay_sale_order_view_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="print_quotation" position="after">
                  <button name="%(open_pay_pos_sale_order)d"
                      string="Register Pos Payments"
                      type="action" states="draft,sent,progress,manual"/>
                </button>
            </field>
        </record>
    </data>
</openerp>
