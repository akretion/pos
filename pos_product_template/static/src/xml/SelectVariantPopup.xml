<template>
    <t t-name="SelectVariantPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-lg">
                <header class="title">
                    <t t-esc="state.template.name" />
                </header>

                <main class="body select-variant">
                    <div class="select-variant-wrapper">
                        <div class="attribute-list-container">
                            <div class="attribute-list-scroller touch-scrollable">
                                <div t-foreach="state.attributes" t-as="attribute" t-key="attribute.id"  class="attribute">
                                    <div class="attribute-name button collapsible" t-att-data-attribute-id="attribute.id">
                                        <t t-esc="attribute.name"/>
                                    </div>
                                    <div class="value-list-container content">
                                        <div class="value-list" t-foreach="attribute.ptav" t-as="value" t-key="value.id">
                                            <AttributeValueItem attributeValue="value" t-att-class="{selected: state.ptav_id_selected[value.id]}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span class="placeholder-ScrollbarWidget" />
                        <div class="select-variant-products">
                            <t t-foreach="state.products" t-as="product" t-key="product.id">
                                <ProductItem product="product" forceVariant="true" />
                            </t>
                        </div>
                    </div>
                </main>

                <footer class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>
</template>